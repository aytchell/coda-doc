@End(Transparent)

@Opt3(Name="<tt>char</tt>",Desc="<tt>*DevName</tt>",
	Expl="name of heap segment")
@Opt3(Name="<tt>rvm&lowbar;length&lowbar;t</tt>",Desc="<tt>DevLength</tt>",
