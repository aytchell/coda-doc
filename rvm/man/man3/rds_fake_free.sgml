<sect1>Synopsis
<tt>#include "rds.h"</tt>

<tt>typedef struct intlist &lcub;
    unsigned long           size;
    unsigned long           count;
    char                    **table;
&rcub; intentionList&lowbar;t;</tt>

<tt>int rds&lowbar;fake&lowbar;free (addr, list)</tt>
@Opt3(Name="<tt>char</tt>",Desc="<tt>*addr</tt>",
	Expl="address of block to be freed")
@Opt3(Name="<tt>intentionList&lowbar;t</tt>",Desc="<tt>*list</tt>",
	Expl="pointer to intention list")

<tt>int rds&lowbar;do&lowbar;free (list, mode)</tt>
@Opt3(Name="<tt>intentionList&lowbar;t</tt>",Desc="<tt>*list</tt>",
